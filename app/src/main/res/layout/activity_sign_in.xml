<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Account.SignInActivity"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color">

            <TextView
                android:id="@+id/tv_taiKhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:padding="@dimen/_4sdp"
                android:textAllCaps="true"
                android:text="@string/account_sign_in"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

<!--            <ImageButton-->
<!--                android:id="@+id/img_back"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_margin="@dimen/_8sdp"-->
<!--                android:background="#085394"-->
<!--                android:src="@drawable/ic_baseline_arrow_back_ios_24" />-->

        </RelativeLayout>
        <!--    -->
        <!--    <TextView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:text="@string/account_sign_in"-->
        <!--        android:gravity="center_horizontal"-->
        <!--        android:textSize="24sp"-->
        <!--        android:textColor="@color/white"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HAUI ZONE"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/edt_username"
                android:layout_marginTop="8dp"
                android:layout_width="250dp"
                android:hint="Tài khoản"
                android:drawablePadding="12dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:background="#38E4FA"
                android:padding="4dp" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_marginTop="8dp"
                android:layout_width="250dp"
                android:hint="Mật khẩu"
                android:drawablePadding="12dp"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_remove_red_eye_24"
                android:background="#38E4FA"
                android:padding="4dp" />

            <Button
                android:id="@+id/btn_dangNhap"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_sign_in" />

            <TextView
                android:id="@+id/tv_dangKy"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_sign_up_1" />

        </LinearLayout>


    </LinearLayout>
</layout>